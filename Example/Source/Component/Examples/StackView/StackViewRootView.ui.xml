<?xml version="1.0" encoding="UTF-8" ?>
<StackViewRootView xmlns="http://schema.Hyperdrive.tech/ui"
    xmlns:layout="http://schema.Hyperdrive.tech/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.Hyperdrive.tech/ui http://schema.Hyperdrive.tech/ui.xsd
                        http://schema.Hyperdrive.tech/layout http://schema.Hyperdrive.tech/layout.xsd"
    rootView="true"
    backgroundColor="red">

    <StackView
        field="stackView"
        axis="vertical"
        spacing="10"
        layout:edges="super">
        <View
            backgroundColor="blue"
            layout:height="20"/>
        <View
            backgroundColor="green"
            layout:height="20"/>
    </StackView>

</StackViewRootView>
