        </attributedTextStyle>
        <attributedTextStyle
            name="CenterButton"
            foregroundColor="white"
            paragraphStyle.alignment="center">
            
            <plus
                font=":light@72" />
            <text
                font=":light@24" />
        </attributedTextStyle>
    </styles>

