<!--            <font>System(10)</font>-->
<!--        </style>-->
<!--    </styles>-->

    <Container
        layout:edges="super">

        <Label
            id="label"
            font=":regular@20"
            numberOfLines="0"
            textAlignment="center"
            layout:top="super inset(10)"
            layout:centerX="super"
            layout:leading=":gte super inset(10)"
            layout:trailing=":lte super inset(10)">
            <attributedText foregroundColor="theme.textOnOverlay">
                "And your 2 <b font=":bold @17">droneships</b>
            too 888.56 &quot;!"
            </attributedText>
        </Label>

            <Button
                backgroundColor="#FFddaa"
                contentHorizontalAlignment="center"
                layout:fillHorizontally="super inset(60)"
                layout:height="50"
                layout:below="label offset(30)"
                layout:bottom="super inset(20)">
                <attributedTitle
                    foregroundColor="brown"
                    underlineStyle="single"
                    underlineColor="white">
                    :uppercased(Forgotten passwordko?)
                </attributedTitle>
                <attributedTitle
                    state="highlighted">
                    <s font=":bold@30" foregroundColor="white">:localized(Tough luck!)<i font=":light@20">lol?</i></s>
                </attributedTitle>
            </Button>

        <ActivityIndicator
            indicatorStyle="gray"/>
    </Container>
</ExampleView2>
