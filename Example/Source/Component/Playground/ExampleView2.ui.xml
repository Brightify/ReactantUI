<?xml version="1.0" encoding="UTF-8" ?>
<ExampleView2 xmlns="http://schema.Hyperdrive.tech/ui"
    xmlns:layout="http://schema.Hyperdrive.tech/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.Hyperdrive.tech/ui ../../../../Schema/ui.xsd
                        http://schema.Hyperdrive.tech/layout http://schema.Hyperdrive.tech/layout.xsd"
    accessModifier="public"
    backgroundColor="theme.overlayBackground">
<!--    <styles>-->
<!--        <style type="UILabel">-->
