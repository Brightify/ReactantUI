<?xml version="1.0" encoding="UTF-8" ?>
<SelectionCell xmlns="http://schema.Hyperdrive.tech/ui"
    xmlns:layout="http://schema.Hyperdrive.tech/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.Hyperdrive.tech/ui http://schema.Hyperdrive.tech/ui.xsd
                        http://schema.Hyperdrive.tech/layout http://schema.Hyperdrive.tech/layout.xsd"
    action:tap="ordel(nazev: $name, jisto: @whatchagot.textColor)">

    <Label
        id="whatchagot"
        text="$name"
        textColor="black"
        layout:fillHorizontally="super inset(20)"
        layout:fillVertically="super inset(12)" />

    <View
        backgroundColor="lightGray"
        layout:height="1"
        layout:fillHorizontally="super"
        layout:bottom="super" />
</SelectionCell>
