<?xml version="1.0" encoding="UTF-8" ?>
<ExampleSelectionRootView xmlns="http://schema.Hyperdrive.tech/ui"
    xmlns:layout="http://schema.Hyperdrive.tech/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.Hyperdrive.tech/ui http://schema.Hyperdrive.tech/ui.xsd
                        http://schema.Hyperdrive.tech/layout http://schema.Hyperdrive.tech/layout.xsd"
    root="true">

    <ScrollView
        layout:edges="super">
        <StackView
            id="stackView"
            export="true"
            layout:edges="super"
            layout:width="super"
            axis="vertical">

            <SelectionCell
                backgroundColor="$what"
                action:ordel="cellAct(labelek: String(10), ..., @self.backgroundColor)"
                state:name="This is a test" />

            <SelectionCell
                id="second"
                backgroundColor="yellow"
                action="pstrh"
                action:ordel="cellAct(labelek: String(10), ..., @self.backgroundColor)"
                state:name="Whaaaaaaat" />
        </StackView>
    </ScrollView>

</ExampleSelectionRootView>
