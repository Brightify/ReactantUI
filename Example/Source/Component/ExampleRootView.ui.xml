<?xml version="1.0" encoding="UTF-8" ?>
<UI xmlns="http://www.brightify.org"
    xmlns:layout="http://www.brightify.org/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.brightify.org http://schema.brightify.org/reactant/ReactantUI.xsd
                        http://www.brightify.org/layout http://schema.brightify.org/reactant/Layout.xsd"
    type="ExampleRootView"
    extend="all"
    rootView="true">

    <styles name="ReactantStyles">
        <LabelStyle name="base" backgroundColor="white" />
        <LabelStyle name="black" backgroundColor="black" textColor="#ff0000" />
        <LabelStyle name="astyle" extend="black" />
        <ButtonStyle name="buttona"
            backgroundColor.highlighted="white"
            isUserInteractionEnabled="true" />
    </styles>

    <ImageView
        layout:edges="super"
        layoutMargins="10,10,10,10"
        image="falcon"
        visibility="visible"
        clipsToBounds="true"
        layout:compressionPriority="high"
        layout:huggingPriority="low"
        contentMode="scaleAspectFill" />

        <VisualEffectView
            effect="blur:regular"
            layout:edges="super" />

        <DatePicker
            layout:id="picker"
            mode="time"
            layout:top="super"
            layout:fillHorizontally="super inset(20)"/>

        <NavigationBar
            barTintColor="blue"
            layout:fillHorizontally="super inset(20)"
            layout:height="50" />

        <PageControl
            numberOfPages="5"
            pageIndicatorTintColor="red"
            layout:fillHorizontally="super inset(20)"
            layout:height="50" />

        <MapView
            layout:id="map"
            mapType="hybrid"
            layout:fillHorizontally="super inset(20)"
            layout:below="id:picker"
            layout:height="200"/>

        <Switch
            layout:id="switch"
            layout:below="id:map"/>
        <Slider
            layout:id="slider"
            layout:below="id:switch"
            layout:fillHorizontally="super inset(20)"/>
        <Stepper
            layout:below="id:slider"
            value="10"
            minimumValue="0"
            maximumValue="100"
            stepValue="5"
            layout:fillHorizontally="super inset(20)"/>

